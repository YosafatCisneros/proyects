<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/visor"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivVisor"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="#673AB7"
        android:contentDescription="@string/img1"
        android:padding="10dp"
        android:radius="10dp"
        android:src="@drawable/img1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/selecciona"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        tools:textColor="@android:color/background_light" />

    <HorizontalScrollView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#673AB7"
        android:padding="10dp"
        android:radius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivImg2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/img2"
                android:src="@drawable/img2" />

            <ImageView
                android:id="@+id/ivImg3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/img3"
                android:src="@drawable/img3" />

            <ImageView
                android:id="@+id/ivImg4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/img4"
                android:src="@drawable/img4" />

            <ImageView
                android:id="@+id/ivImg5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/img5"
                android:src="@drawable/img5" />

        </LinearLayout>


    </HorizontalScrollView>

    <Button
        android:id="@+id/btnAudioVideo"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="Audio y Video" />

</LinearLayout>